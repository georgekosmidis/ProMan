@{
    ViewBag.Title = Model.Name;
}

@model ProManClient.ViewModels.DevelopersViewModel

<!-- Content Header (Page header) -->
@Html.Partial( "../Shared/LayoutPartials/TopMenu", new ViewDataDictionary { { "Title", Model.Name }, { "icon", "user" } } )
<!-- Main content -->
<section class="content">
    @Html.Partial( "../Shared/Widgets/TotalNumbers", new ViewDataDictionary { { "action", "GetTotalNumbers" }, { "controller", "Developers" } } )
    <!-- Main row -->
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header">
                    <h3 class="box-title">Development time</h3>
                </div>
                <div class="box-body">
                    <!--BOC Per Time Chart-->
                    @Html.Partial( "../Shared/Widgets/BOCPerTimeChart", new ViewDataDictionary { { "action", "GetBOCPerTime" }, { "controller", "Developers" } } )
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <section class="col-lg-4 col-md-6 connectedSortable">
            <!--Projects List-->
            @Html.Partial( "../Shared/Widgets/ProjectsList", new ViewDataDictionary { { "action", "GetProjectsList" }, { "controller", "Developers" } } )
        </section>
        <section class="col-lg-4 col-md-6 connectedSortable">
            <!--Commits List-->
             @Html.Partial( "../Shared/Widgets/CommitsList", new ViewDataDictionary { { "action", "GetCommitsList" }, { "controller", "Developers" } } )
        </section>
        <section class="col-lg-4 col-md-6 connectedSortable">
            <!--Modifications PieChart-->
            @Html.Partial( "../Shared/Widgets/TypesChart", new ViewDataDictionary { { "action", "GetModificationList" }, { "controller", "Developers" } } )
        </section>
    </div><!-- /.row (main row) -->
</section>